---
import Base from "../layouts/Base.astro";
import Link from "../components/Link.vue";
import { getTopTracks } from "../lib/spotify";

const tracks = await getTopTracks();

const title = "nexxel â€¢ music";
---

<!-- <pre>
    {JSON.stringify(tracks, null, 2)}
